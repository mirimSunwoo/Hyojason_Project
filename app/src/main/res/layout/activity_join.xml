<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFC845"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/j"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <ImageButton
        android:id="@+id/btn_join_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/limpidity"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back2_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/join_petName"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:hint="petName"
            android:textColorHint="#B5B2B2"
            android:background="@drawable/edit_radius"/>
        <TextView
            android:id="@+id/menu_check"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:hint="종 선택"
            android:textColorHint="#B5B2B2"
            android:background="@drawable/edit_radius"/>
    </LinearLayout>
    <EditText
        android:id="@+id/join_id"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:hint="ID"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/join_password"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="@string/in_pass"
        android:layout_marginTop="10dp"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/join_email"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="@string/in_email"
        android:layout_marginTop="10dp"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <Button
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="@string/join"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/btn_radius"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edtNameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edtIdResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>