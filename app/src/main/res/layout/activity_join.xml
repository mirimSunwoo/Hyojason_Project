<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFC845"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/j"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/join_petName"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:text="@string/pet_name"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:background="@drawable/edit_radius"/>
        <TextView
            android:id="@+id/list_check"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="23sp"
            android:text="종 선택"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:background="@drawable/edit_radius"/>
    </LinearLayout>
    <EditText
        android:id="@+id/join_id"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/in_id"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/join_password"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="@string/in_pass"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/join_email"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="@string/in_email"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:background="@drawable/edit_radius"/>
    <TextView
        android:id="@+id/btn_join"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="@string/join"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/btn_radius"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edtNameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edtIdResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>