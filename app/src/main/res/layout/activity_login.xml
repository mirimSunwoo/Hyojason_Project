<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFC845"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/animal"/>
    <EditText
        android:id="@+id/id_input"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="@string/in_id"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/pass_input"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="@string/in_pass"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:text="자동 로그인"/>
        <TextView
            android:id="@+id/text_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:text="아이디 찾기 | 비밀번호 찾기"/>
    </LinearLayout>

    <Button
        android:id="@+id/text_login"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_radius"
        android:gravity="center"
        android:text="@string/btn_1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#E16F4B" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/orange"
        android:text="@string/find_id"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
