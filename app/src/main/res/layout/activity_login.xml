<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFC845"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/eatcare_rabbit"/>
    <EditText
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/id_input"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="@string/in_id"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:paddingLeft="20dp"
        android:id="@+id/pass_input"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="@string/in_pass"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:textColorHint="#B5B2B2"
        android:background="@drawable/edit_radius"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:text="자동 로그인"/>
    </LinearLayout>

    <Button
        android:id="@+id/text_login"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_radius"
        android:gravity="center"
        android:text="@string/btn_1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="#E16F4B" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/orange"
        android:text="@string/find_id"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>