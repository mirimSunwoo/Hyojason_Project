<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:src="@drawable/title"
        android:background="#FFC845"/>

    <ImageButton
        android:id="@+id/btn_mypage"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/mypage_btn"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/radius"
        android:backgroundTint="#FFC845"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/btn_menu_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_search"
                android:background="@color/orange"/>

            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/btn_menu_best"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_bestfood"
                android:background="@color/orange"/>
            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/btn_menu_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_review"
                android:background="@color/orange"/>

            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/btn_menu_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_timer"
                android:background="@color/orange"/>
        </LinearLayout>

    </LinearLayout>

