<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/orange"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_manager_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/limpidity"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back2_1"/>
    <EditText
        android:id="@+id/btn_manager_animalName"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:hint="Animal Name"
        android:textColorHint="@color/gray"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/btn_manager_foodName"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:hint="Food Name"
        android:textColorHint="@color/gray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/btn_manager_info"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:hint="Info"
        android:textColorHint="@color/gray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_radius"/>
    <EditText
        android:id="@+id/btn_manager_danger"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:hint="Danger(0/1)"
        android:textColorHint="@color/gray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_radius"/>

    <Button
        android:id="@+id/text_check1"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_radius"
        android:gravity="center"
        android:text="확인"
        android:textSize="25sp"
        android:textStyle="bold"
        app:backgroundTint="#E16F4B" />

</LinearLayout>