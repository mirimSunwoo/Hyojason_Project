<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:background="#FFC845">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/title"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_review_home"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@color/limpidity"
        android:layout_marginRight="20dp"
        android:src="@drawable/home"/>
    <SearchView
        android:layout_width="340dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:queryHint="음식을 입력하세요"
        android:searchIcon="@drawable/search"
        android:iconifiedByDefault="false"/>
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="420dp"
        android:background="@drawable/setting_radius2"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ListView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/rvListView"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </ListView>
        <ImageButton
            android:id="@+id/btn_review_add"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/limpidity"
            android:src="@drawable/plus"/>
    </LinearLayout>
</LinearLayout>
